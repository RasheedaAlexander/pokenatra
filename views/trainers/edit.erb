<form action="/trainers/<%= @trainer.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label>Name:</label>
  <input type="text" name="trainer[name]" value="<%= @trainer.name %>">
  <input type="text" name="trainer[img_url]" value="<%= @trainer.img_url %>">

  <label>Level</label>
  <input type="text" name="trainer[level]" value="<%= @trainer.level %>">
  <input type="submit" value="Update Trainer">

</form>
<h2>Delete Trainer</h2>
<form action="/trainers/<%= @trainer.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Destroy Artist">
</form>
